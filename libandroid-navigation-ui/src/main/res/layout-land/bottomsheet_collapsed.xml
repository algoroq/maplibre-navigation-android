<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp">

        <ProgressBar
            android:id="@+id/rerouteProgressBar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="?attr/navigationViewAccent"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/container_summary"
            app:layout_constraintEnd_toEndOf="@id/container_summary"
            app:layout_constraintStart_toStartOf="@id/container_summary"
            app:layout_constraintTop_toTopOf="@id/container_summary" />

    <LinearLayout
        android:id="@+id/container_summary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/upper_half_rounded_shape"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/rounded_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_bottomSheetStateChanger"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/shape_circle_semitransparent"
                    android:tint="?attr/navigationViewSecondaryText"
                    app:srcCompat="@drawable/ic_arrow_up" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/arrivalTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="17:45"
                        android:textColor="?attr/navigationViewSecondaryText"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_arrivalTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="@string/arrival"
                        android:textColor="?attr/navigationViewSecondaryText"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/timeRemainingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="02:45"
                        android:textColor="?attr/navigationViewSecondaryText"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_timeUnitsRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="hod."
                        android:textColor="?attr/navigationViewSecondaryText"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distanceRemainingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="275"
                        android:textColor="?attr/navigationViewSecondaryText"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_distanceUnitsRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="km"
                        android:textColor="?attr/navigationViewSecondaryText"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/routeOverviewBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/shape_circle_semitransparent"
                    android:tint="?attr/navigationViewSecondaryText"
                    app:srcCompat="@drawable/ic_route_preview" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:progressTint="?attr/navigationViewProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
